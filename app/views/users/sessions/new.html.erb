<% provide :title, t(".sign_in") %>
<div class="card login-form">
  <article class="card-body">
    <%= link_to  t(".sign_up"), new_user_registration_path, class: "float-right btn btn-outline-primary" %>
    <h4 class="card-title mb-4 mt-1"><%= t ".sign_in" %></h4>
    <hr>
    <% flash.each do |message_type, message| %>
      <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
    <% end %>
      <%= form_for :session, url: user_session_path do |f| %>
      <div class="form-group">
        <%= f.text_field :email_username, class: "form-control",
          placeholder: t(".username_or_email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control",
          placeholder: t(".password") %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.submit t(".log_in"), class: "btn btn-primary btn-block"%>
          </div>
        </div>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, checked: "checked" %>
          <span><%= t ".remember_me" %></span>
        <% end %>
        <div class="col-md-6 text-right">
        </div>
      </div>
    <% end %>
    <p>
      <%= link_to Settings.facebook_auth_path, 
        class: "btn btn-block btn-outline-primary" do %>
        <i class="fa fa-facebook-f"></i>
        <%= t ".login_via_facebook" %>
      <% end %>
    </p>
  </article>
</div>
